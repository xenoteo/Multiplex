<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="agh.alleviation.controller.access_dialog.RegistrationDialogController"
            prefHeight="239.0" prefWidth="275.0">

    <center>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="118.0" minWidth="10.0" prefWidth="89.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="189.0" minWidth="10.0" prefWidth="186.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Name" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                <TextField fx:id="nameField" prefHeight="28.0" prefWidth="83.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets right="10.0" />
                    </GridPane.margin>
                </TextField>

                <Label text="Email" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets right="10.0" />
                    </GridPane.margin>
                </TextField>

                <Label text="Login" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
                <TextField fx:id="loginField" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets right="10.0" />
                    </GridPane.margin>
                </TextField>

                <Label text="Password" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
                <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets right="10.0" />
                    </GridPane.margin>
                </PasswordField>

                <Button fx:id="registerButton" mnemonicParsing="false" onAction="#register" text="Register" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="5" />
            </children>
        </GridPane>
    </center>
</BorderPane>
