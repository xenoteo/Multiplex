<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="agh.alleviation.presentation.controller.StatisticsController"
            stylesheets="@../styles/ListView.css"
            prefHeight="400.0" prefWidth="600.0">
    <center>
        <TableView fx:id="itemTable" prefHeight="400.0" prefWidth="522.0" BorderPane.alignment="CENTER">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <right>
        <VBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="124.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="40.0"/>
            </BorderPane.margin>
            <Button fx:id="movies" mnemonicParsing="false" prefHeight="28.0" onAction="#handleButtonClicked"
                    prefWidth="100.0" text="Movie" textAlignment="CENTER">
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
                <VBox.margin>
                    <Insets bottom="15.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="genres" mnemonicParsing="false" prefHeight="28.0" onAction="#handleButtonClicked"
                    prefWidth="100.0" text="Genre" textAlignment="CENTER">
                <VBox.margin>
                    <Insets bottom="15.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="users" mnemonicParsing="false" prefHeight="28.0" onAction="#handleButtonClicked"
                    prefWidth="100.0" text="User" textAlignment="CENTER">
                <VBox.margin>
                    <Insets bottom="15.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="time" mnemonicParsing="false" prefHeight="28.0" onAction="#handleButtonClicked"
                    prefWidth="100.0" text="Time" textAlignment="CENTER">
                <VBox.margin>
                    <Insets bottom="15.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="days" mnemonicParsing="false" prefHeight="28.0" onAction="#handleButtonClicked"
                    prefWidth="100.0" text="Day" textAlignment="CENTER">
                <VBox.margin>
                    <Insets bottom="15.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="months" mnemonicParsing="false" prefHeight="28.0" onAction="#handleButtonClicked"
                    prefWidth="100.0" text="Month" textAlignment="CENTER">
                <VBox.margin>
                    <Insets bottom="15.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="reset" mnemonicParsing="false" prefHeight="28.0" onAction="#reset"
                    prefWidth="100.0" text="Reset" textAlignment="CENTER" styleClass="removeButton">
                <VBox.margin>
                    <Insets bottom="5.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </right>
</BorderPane>
