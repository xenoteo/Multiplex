               <GridPane.margin>
                  <Insets right="10.0" />
               </GridPane.margin>
            </ChoiceBox>
            <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets right="10.0" />
               </GridPane.margin>
            </DatePicker>
            <Label text="Movie" GridPane.halignment="CENTER" />
            <ChoiceBox fx:id="movieChoiceBox" prefWidth="150.0" GridPane.columnIndex="1" />
            </children>
        </GridPane>
    </center>
